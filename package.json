{
  "name": "langbly",
  "version": "0.2.0",
  "description": "Official JavaScript/TypeScript SDK for the Langbly translation API",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json && node scripts/fix-cjs.mjs",
    "build": "rm -rf dist && npm run build:esm && npm run build:cjs",
    "test": "vitest run",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "translation",
    "api",
    "langbly",
    "google-translate",
    "i18n",
    "localization",
    "llm"
  ],
  "author": "Jasper de Winter <jasper@langbly.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Langbly/langbly-js.git"
  },
  "homepage": "https://langbly.com",
  "devDependencies": {
    "typescript": "^5.4",
    "vitest": "^1.6"
  }
}
